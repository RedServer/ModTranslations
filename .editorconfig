# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 160
insert_final_newline = true
trim_trailing_whitespace = true

[*.lang]
trim_trailing_whitespace = false
ij_properties_keep_blank_lines = true

[*.{json,info,mcmeta,yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
